<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.beuth_hochschule.s790642.twoactivitiesexercise.InsertScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insert_screen_btn_save_caption"
        android:id="@+id/insert_screen_btn_save"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/insert_screen_edit_age" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/insert_screen_edit_name"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/insert_screen_edit_age"
        android:layout_below="@+id/insert_screen_edit_name"
        android:layout_alignLeft="@+id/insert_screen_edit_name"
        android:layout_alignStart="@+id/insert_screen_edit_name"
        android:layout_marginTop="52dp"
        android:text="Age" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/insert_screen_edit_adress"
        android:layout_below="@+id/insert_screen_edit_age"
        android:layout_alignLeft="@+id/insert_screen_edit_age"
        android:layout_alignStart="@+id/insert_screen_edit_age"
        android:layout_marginTop="56dp"
        android:text="Addy" />

</RelativeLayout>
